<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/dirIcon" android:layout_width="24dp"
        android:layout_height="24dp" android:src="@drawable/ic_folder_open"/>
    <TextView android:id="@+id/dirName" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:paddingStart="8dp"
        android:textSize="16sp"/>
</LinearLayout>
