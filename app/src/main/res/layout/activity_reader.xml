<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextView å æ»¡å‰©ä½™ç©ºé—´ -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@fonts/SimsunExtG"
        android:padding="20dp"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="18sp"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="1.2"
        android:overScrollMode="always"
        android:breakStrategy="simple"/>

    <!-- æ§åˆ¶æ¡æµ®å±‚åŒºåŸŸ -->
    <LinearLayout
        android:id="@+id/overlayControls"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <Button
            android:id="@+id/btnTTS"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="ğŸ§"
            android:textColor="#FFFFFF"
            android:padding="0dp"/>

        <TextView
            android:id="@+id/pageInfo"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1/1"
            android:textColor="#888888"/>

        <SeekBar
            android:id="@+id/pageSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:thumbTint="#000000"
            android:progressTint="#888888"/>
    </LinearLayout>

    <!-- å¯é€‰æ§åˆ¶é¢æ¿ include -->
<!--    <include
        android:id="@+id/controlPanel"
        layout="@layout/activity_control"
        android:visibility="gone"
        android:background="@android:color/transparent"/>-->
    <include
        android:id="@+id/settingsPanel"
        layout="@layout/settings_panel"
        android:visibility="gone"
         />

</FrameLayout>

