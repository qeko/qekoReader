<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="12dp">



    <TextView
        android:id="@+id/bookName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="书名"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/renameBtn"
        app:layout_constraintBottom_toTopOf="@+id/bookDetails"/>

    <TextView
        android:id="@+id/bookDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="格式，修改时间"
        android:textSize="12sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/bookName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/renameBtn"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/renameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重命名"
        android:textColor="#1E88E5"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/moveBtn"
        android:background="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/moveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="移动"
        android:textColor="#1E88E5"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="?attr/selectableItemBackground"/>
</androidx.constraintlayout.widget.ConstraintLayout>
