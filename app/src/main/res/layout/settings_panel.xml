        android:gravity="center_vertical">
        <TextView   android:textSize="24sp"  android:text="反白" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnToggleInvert" android:text="切换" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

