<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsPanelRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#DDDDDD"
    android:textSize="24sp"
    android:layout_gravity="bottom"
    android:padding="16dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:layout_marginBottom="8dp">
        <TextView  android:textSize="24sp"  android:text="字号" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button   android:textSize="24sp" android:id="@+id/btnIncreaseFontSize" android:text="+" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvFontSizeValue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="16"
            android:textSize="18sp"/>
        <Button  android:textSize="24sp"  android:id="@+id/btnDecreaseFontSize" android:text="-" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:layout_marginBottom="8dp">
        <TextView   android:textSize="24sp" android:text="行距" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button   android:textSize="24sp" android:id="@+id/btnIncreaseLineSpacing" android:text="+" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvLineSpacingValue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1.3"
            android:textSize="18sp"/>

        <Button   android:textSize="24sp" android:id="@+id/btnDecreaseLineSpacing" android:text="-" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:layout_marginBottom="8dp">
        <TextView   android:textSize="24sp" android:text="语速" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button   android:textSize="24sp" android:id="@+id/btnIncreaseSpeed" android:text="+" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvSpeechRateValue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1.0"
            android:textSize="18sp"/>
        <Button   android:textSize="24sp" android:id="@+id/btnDecreaseSpeed" android:text="-" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
          android:textSize="24sp"
        android:layout_marginBottom="8dp">
        <TextView   android:textSize="24sp" android:text="亮度" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button   android:textSize="24sp" android:id="@+id/btnIncreaseBrightness" android:text="+" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvBrightnessValue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="50"
            android:textSize="18sp"/>
        <Button   android:textSize="24sp" android:id="@+id/btnDecreaseBrightness" android:text="-" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
